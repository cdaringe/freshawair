{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "packageRules": [
    {
      "matchFileNames": ["**/docker-compose*.yml", "**/docker-compose*.yaml"],
      "enabled": false
    },
    {
      "groupName": "major dependencies",
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "non-major dependencies",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
